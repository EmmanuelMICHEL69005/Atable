<div class ="container">
<div class="banner1">
<h1><%=@restaurant%></h1>
</div>

<div class="historique-client">
      <h2> Liste des clients</h2>
      <table class = "table table-hover atable">
        <thead class="table-dark atableH">
          <td>Prénom</td>
          <td>Nom</td>
          <td>Téléphone</td>
          <td>email</td>
          <td>La Fourchette_ID</td>
          <td>Facebook_id</td>
          <td>rating</td>
        </thead>
        <tbody>
      <% @customers.sort_by { |customer| customer.updated_at }.reverse.each do |customer| %>
        <tr>
          <td ><%=link_to customer.first_name.capitalize, edit_customer_path(customer) %></td>
          <td ><%= link_to customer.last_name.upcase, edit_customer_path(customer)%></td>
          <td ><%=customer.phone_number%></td>
          <td ><%=customer.email%></td>
          <td ><%=customer.fourchette_id%></td>
          <td ><%=customer.facebook_id%></td>
          <td ><%=rand(1..5)%></td>
        </tr>
      <%end%>
    </tbody>
  </table>
</div>
